{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "components/CustomView.tsx",
    "components/AccessoryBar.js",
    "Functions/MediaUtils.ts",
    "Functions/Storage.ts",
    "AppLayout/chatRoom.tsx",
    "components/InputToolBar.js",
    "components/ImageMessage.tsx",
    "components/ChatList.tsx",
    "components/AudioMessage.tsx",
    "components/ChatRoomBackground.tsx ",
    "Themes/DarkMode.js",
    "AppLayout/(main)/(homeStack)/home.js",
    "env/firebaseConfig.js",
    "services/NotificationActions.js",
    "services/ExpoPushNotifications.js",
    "services/RegisterForPushNotifications.js"
  ]
}
