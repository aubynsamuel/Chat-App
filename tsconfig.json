{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "components/**/*.{ts,tsx}",
    "Functions/**/*.{ts,tsx}",
    "AppLayout/**/*.tsx",
    "Themes/**/*.{ts,tsx}",
    "services/**/*.{ts,tsx}"
  ]
}
